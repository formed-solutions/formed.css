extends ../_layouts/page
include ../_mixins/mixins

block settings
   - var page = 'components'

block main
  div.Layout-container.mvl
    h1 Editor
    p Form input components.

  div(class="mvl phl flex flex-center")
    div.Editor
      input(
        class="Editor-control"
        id="input-1"
        type="text")
      label(class="Editor-label" for="input-1")
        | Text

    div.Editor.mll
      input(
        class="Editor-control"
        id="input-2"
        pattern="-?[0-9]+"
        type="text")
      label(class="Editor-label" for="input-2")
        | Number
      div.Editor-feedback
        | Value needs to be a number.

  pre.language-markup
    code
      :markdown
        <!-- Default editor -->
        <div class="Editor">
          <label class="Editor-label" for="input-1">Text</label>
          <input class="Editor-control" id="input-1" type="text">
        </div>

        <!-- Default editor with validation feedback -->
        <div class="Editor">
          <label class="Editor-label" pattern="-?[0-9]+" for="input-2">Number</label>
          <input class="Editor-control" id="input-2" type="text">
          <div class="Editor-feedback">Value needs to be a number.</div>
        </div>

  div(class="mvl phl flex flex-center")
    div.Editor
      input(
        autofocus="true"
        class="Editor-control"
        id="input-3"
        placeholder="Text"
        type="text")
      label(class="Editor-label" for="input-3")
        | Text

    div.Editor.mll
      input(
        class="Editor-control"
        id="input-4"
        pattern="-?[0-9]*(\.[0-9]+)?"
        placeholder="Number"
        type="text")
      label(class="Editor-label" for="input-4")
        | Number
      div.Editor-feedback
        | Value needs to be a number.

  pre.language-markup
    code
      :markdown
        <!-- Editors with no label -->
        <div class="Editor">
          <input class="Editor-control" id="input-3" type="text">
          <label class="Editor-label" for="input-3">Text</label>
        </div>

        <div class="Editor">
          <input class="Editor-control" id="input-4" type="text">
          <label class="Editor-label" for="input-4">Number</label>
          <div class="Editor-feedback">Value needs to be a number.</div>
        </div>

  div(class="mvl phl flex flex-center")
    div.Editor.has-icon.mll
      input(
        class="Editor-control"
        id="input-5"
        type="text")
      label(class="Editor-label" for="input-5")
        | Name
      div.Editor-icon
        +icon('icon-user')

    div.Editor.has-icon.mll
      input(
        class="Editor-control"
        id="input-6"
        type="text"
        value="christopher")
      label(class="Editor-label" for="input-6")
        | Name
      div.Editor-icon
        +icon('icon-user')

  pre.language-markup
    code
      :markdown
        <!-- Editors with icons -->
        <div class="Editor has-icon">
          <input class="Editor-control" id="input-5" type="text">
          <label class="Editor-label" for="input-5">Name</label>
          <div class="Editor-icon">
            <svg class="Icon">
              <use xlink:href="#icon-user"></user>
            </svg>
          </div>
        </div>

        <!-- Dirty editors with icons -->
        <div class="Editor has-icon">
          <input class="Editor-control" id="input-6" type="text">
          <label class="Editor-label" for="input-6">Name</label>
          <div class="Editor-icon">
            <svg class="Icon">
              <use xlink:href="#icon-user"></user>
            </svg>
          </div>
        </div>

  div(class="mvl phl flex flex-center")
    div.Editor
      input(
        class="Editor-control"
        disabled
        id="input-7"
        type="text")
      label(class="Editor-label" for="input-7")
        | Name

    div.Editor.is-readonly.mll
      input(
        class="Editor-control"
        readonly
        id="input-8"
        type="text"
        value="christopher")
      label(class="Editor-label" for="input-8")
        | Name

  pre.language-markup
    code
      :markdown
        <!-- Disabled editor -->
        <div class="Editor is-disabled">
          <input class="Editor-control" disabled id="input-7" type="text">
          <label class="Editor-label" for="input-7">Name</label>
        </div>

        <!-- Readonly editor -->
        <div class="Editor is-dirty is-readonly">
          <input class="Editor-control" readonly id="input-8" type="text">
          <label class="Editor-label" for="input-8">Name</label>
        </div>

block scripts
  script.
    [].forEach.call(document.querySelectorAll('.Editor'), function (editor) {
      Object.create(formed.default.Editor).init(editor);
    });
