extends ../_layouts/page

block settings
   - var page = 'components'

block main
  div.Layout-container.mvl
    h1 Toggles
    p Custom Formed checkboxes and radio buttons.

  div.Layout-container.mvl
    h2#checkbox Checkbox

    div.flex.flex-center
      div
        label(class="Checkbox js-checkbox" for="checkbox1")
          input(class="Checkbox-control"
            checked
            id="checkbox1"
            type="checkbox")
          span.Checkbox-label checkbox

      div.mll
        label(class="Checkbox js-checkbox" for="checkbox2")
          input(class="Checkbox-control" id="checkbox2" type="checkbox")
          span.Checkbox-label checkbox

  div.Layout-container.mvl
    div.flex.flex-center
      div
        label(class="Checkbox has-mask js-checkbox" for="checkbox3")
          input(class="Checkbox-control"
            checked
            disabled
            id="checkbox3"
            type="checkbox")
          span.Checkbox-label checkbox

      div.mll
        label(class="Checkbox has-mask js-checkbox" for="checkbox4")
          input(class="Checkbox-control"
            disabled
            id="checkbox4"
            type="checkbox")
          span.Checkbox-label checkbox

  pre.language-markup
    code
      :markdown
        <!-- checked checkbox -->
        <label class="Checkbox js-checkbox" for="checkbox1">
          <input class="Checkbox-control" checked id="checkbox1" type="checkbox" />
          <span class="Checkbox-label">checkbox</span>
        </label>

        <!-- unchecked checkbox -->
        <label class="Checkbox js-checkbox" for="checkbox2">
          <input class="Checkbox-control" id="checkbox2" type="checkbox" />
          <span class="Checkbox-label">checkbox</span>
        </label>

        <!-- disabled checked checkbox -->
        <label class="Checkbox js-checkbox" for="checkbox2">
          <input class="Checkbox-control" disabled checked id="checkbox2" type="checkbox" />
          <span class="Checkbox-label">checkbox</span>
        </label>

        <!-- disabled checkbox -->
        <label class="Checkbox js-checkbox" for="checkbox2">
          <input class="Checkbox-control" disabled id="checkbox2" type="checkbox" />
          <span class="Checkbox-label">checkbox</span>
        </label>

  div.Layout-container.mvl
    h2#radio Radio

    div.flex.flex-center
      label(class="Radio js-radio" for="radio1")
        input(class="Radio-control"
          id="radio1"
          name="radioSet1"
          type="radio")
        span.Radio-label radio

      label(class="Radio mll js-radio" for="radio2")
        input(class="Radio-control"
          id="radio2"
          name="radioSet1"
          type="radio")
        span.Radio-label radio

  pre.language-markup
    code
      :markdown
        <!-- radio checked -->
        <label class="Radio js-radio" for="radio1">
          <input class="Radio-control" checked name="radioSet1" id="radio1" type="radio" />
          <span class="Radio-label">radio</span>
        </label>

        <!-- unchecked radio -->
        <label class="Radio js-radio" for="radio2">
          <input class="Radio-control" id="radio2" name="radioSet1" type="radio" />
          <span class="Radio-label">radio</span>
        </label>

block scripts
  script.
    [].forEach.call(document.querySelectorAll('.js-checkbox'),
      function (checkbox) {
        formed.default.checkbox(checkbox);
      });

    radios = [];
    [].forEach.call(document.querySelectorAll('.js-radio'),
      function (radio) {
        radios.push(formed.default.radio(radio));
      });
